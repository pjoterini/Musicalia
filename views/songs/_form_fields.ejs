<div class="form-row">
  <div class="form-item">
    <label for="">Title</label>
    <input type="text" name="title" value="<%= song.title %>" />
  </div>
  <div class="form-item">
    <label for="">Artist</label>
    <select name="artist">
      <% artists.forEach(artist => { %> <% if (artist.id === song.artist) {%>
      <option
        selected
        label="<%= artist.name %>"
        value="<%= artist.id %>"
      ></option>
      <%} else { %>
      <option label="<%= artist.name %>" value="<%= artist.id %>"></option>
      <% } %> <% }) %>
    </select>
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label for="">Publish Date</label>
    <input
      type="date"
      name="publishDate"
      value="<%= song.publishDate == null ? '' : song.publishDate.toISOString().split('T')[0] %>"
    />
  </div>
  <div class="form-item">
    <label for="">Page Count</label>
    <input
      type="number"
      name="pageCount"
      min="1"
      value="<%= song.pagecount %>"
    />
  </div>
</div>

<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label for="">Cover</label>
    <input type="file" name="cover" class="song-cover filepond" />
  </div>
  <div class="form-item">
    <label for="">Description</label>
    <textarea name="description"><%= song.description %></textarea>
  </div>
</div>
